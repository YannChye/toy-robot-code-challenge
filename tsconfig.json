{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./build"
  },
  "include": ["src"],
  "exclude": ["**/*.spec.ts", "node_modules"]
}
